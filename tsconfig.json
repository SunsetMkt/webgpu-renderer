{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES5",
    "noImplicitAny": false,
    "module": "commonjs",
    "allowJs": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "demo/**/*.ts",
    "types/**/*.d.ts",
    "node_modules/@webgpu/types"
  ],
  "lib": [
    "es5",
    "es2015.promise",
    "es2016",
    "dom"
  ]
}